<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_circle" />

        <include
            android:id="@+id/media_action_selector"
            layout="@layout/component_media_selector"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circular_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cpb_progress="50"
            app:cpb_progressbar_color="@color/blue"
            app:cpb_background_progressbar_color="@android:color/transparent"
            app:cpb_progressbar_width="10dp"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_round_border="true"
            />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>